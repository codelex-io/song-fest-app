{
    "compilerOptions": {
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es5",
        "lib": ["es2017"],
        "module": "es2015",
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-native",
        "noUnusedLocals": true,
        "rootDirs": ["src", "stories"],
        "baseUrl": "./",
        "paths": {
            "@styles": ["./src/styles"],
            "@styles/*": ["./src/styles/*"],
            "@components": ["./src/components"],
            "@components/*": ["./src/components/*"],
            "@views": ["./src/views"],
            "@views/*": ["./src/views/*"],
            "@utils": ["./src/utils"],
            "@utils/*": ["./src/utils/*"],
            "@domain": ["./src/domain"],
            "@domain/*": ["./src/domain/*"],
            "@localization": ["./src/localization"],
            "@localization/*": ["./src/localization/*"]
        }
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"]
}
